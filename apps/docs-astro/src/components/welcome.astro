---
import { Code } from "@astrojs/starlight/components";
import { Tabs, TabItem } from "@astrojs/starlight/components";
import LogoAnimated from "./logo-animated.astro";

export const exampleCodeNpx = "npx @matthew.atkins/create-carve@latest create";
export const exampleCodePnpx =
	"pnpx @matthew.atkins/create-carve@latest create";
export const exampleCodeBunx =
	"bunx @matthew.atkins/create-carve@latest create";
---

<section class="grid place-items-center p-4 sm:p-7">
	<LogoAnimated />

	<div class="flex flex-col gap-12 items-center justify-center">
		<div class="text-center mt-36 border-4 border-brand-alternate rounded-sm p-4 dark:bg-brand-alternate/30 bg-brand-alternate/20">
			<p class="dark:text-gray-300 text-gray-800 m-0">Introducing Carve. <a href="https://atkins.codes/cache/carve" class="dark:text-brand-primary text-brand-alternate font-bold" target="_blank" rel="noopener noreferrer" data-umami-event="click-read-post">Check out the post</a>.</p>
		</div>

		<div class="flex flex-col gap-8 items-center justify-center w-full">
			<p class="text-md text-gray-500 m-0">Install with the Carve CLI</p>

			<Tabs>
				<TabItem label="npm" transition:animate="slide">
					<Code code={exampleCodeNpx} lang="bash" frame="code" wrap />
				</TabItem>
				<TabItem label="pnpm" transition:animate="slide">
					<Code code={exampleCodePnpx} lang="bash" frame="code" wrap />
				</TabItem>
				<TabItem label="bun" transition:animate="slide">
					<Code code={exampleCodeBunx} lang="bash" frame="code" wrap />
				</TabItem>
			</Tabs>
		</div>

		<div class="flex gap-8 flex-col items-center justify-center w-full">
			<p class="text-md text-gray-500 m-0">or</p>
			<a href="https://github.com/new?template_name=carve-template&template_owner=matthewatkins" class="flex items-center gap-2 text-center border-4 border-brand-primary rounded-full p-4 dark:bg-brand-primary/30 bg-brand-primary/20" target="_blank" rel="noopener noreferrer" data-umami-event="click-create-project">
				<svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 16 16" height="1.5em" width="1.5em" xmlns="http://www.w3.org/2000/svg">
					<path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"></path>
				</svg>
				Create a project using Carve Template
			</a>
		</div>
	</div>
</section>
